  <div class="col p-5">

    <h3 class="my-2">Passwort zurücksetzen</h3>
    <!-- Password Reset Form -->
    <form
      class="text-center my-4"
      id="login"
      method="POST"
      action="<%= "/password-reset/" +  locals.params.today + "-" + locals.params.hash %> "
      style="text-align: center">

      <div class="illustration"></div>

        <!-- Password Field -->
        <div class="mb-3">
          <input
            class="form-control"
            type="password"
            name="password"
            placeholder="Neues Passwort eingeben..."
          />
        </div>

        <!-- Password Confirmation Field -->
        <div class="mb-3">
          <input
            class="form-control"
            type="password"
            name="passwordConfirmation"
            placeholder="Passwort wiederholen"
          />
        </div>

      <div class="mb-3">
        <button
          class="btn btn-primary form-control"
          type="submit"
          >Zurücksetzen</button>
      </div>

    </form>

  </div>
