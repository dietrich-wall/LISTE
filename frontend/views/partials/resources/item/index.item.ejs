<%# 

This View renders a Single Items

Access data through @param { locals.doc.x } 

@param { doc._id } Object unique ID
@param { doc.name } 
@param { doc.room }
@param { doc.shelf }
@param { doc.description }
@param { doc.AlphNumId }
@param { doc.qrSvg }
@param { doc.isAvailable }
@param { doc.takenTo }

%> 

<!-- Tab Links -->
<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item" role="presentation"><a class="nav-link active text-secondary" role="tab" data-bs-toggle="tab" href="#tab-1"><i class="fa-regular fa-rectangle-list mx-1"></i> Details</a></li>
    <li class="nav-item" role="presentation"><a class="nav-link text-secondary" role="tab" data-bs-toggle="tab" href="#tab-2"><i class="fa-solid fa-file-arrow-down mx-1"></i> Dokumente</a></li>
    
    <!-- Rent-History Tab - Display only to admin -->
    <% if (typeof user != "undefined" && user.role === "admin") { %>
        <li class="nav-item" role="presentation"><a class="nav-link text-secondary" role="tab" data-bs-toggle="tab" href="#tab-3"><i class="fa-solid fa-clock-rotate-left mx-1"></i> Historie</a></li>
    <% } %> 

</ul>

<!-- Tab Body -->
<div class="tab-content">

    <!-- Tab - Produktdetails -->
    <div class="tab-pane active" role="tabpanel" id="tab-1">
        <%- include('./details.item.ejs') %>
    </div>


    <!-- Tab - Technische Dokumente -->
    <div class="tab-pane" role="tabpanel" id="tab-2">
        <%- include('./documents.item.ejs') %>
    </div>

    <!-- Tab - History -->
    <div class="tab-pane " role="tabpanel" id="tab-3">
        <%- include('./history.item.ejs') %>
    </div>
    
</div>


